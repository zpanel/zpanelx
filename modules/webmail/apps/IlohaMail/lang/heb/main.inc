function formatStatusString($num, $folder, $type){
	$str="";
	if ($type=="delete"){
		$str = "נמחקו $num הודעות".($num>1?"s":"");
	}else if ($type == "move"){
		$str = "הועברו $num הודעות".($num>1?"s":"")." ל $folder";
	}
	
	return $str;
}

